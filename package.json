{
  "name": "tilda-qa",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run dev:all",
    "dev:all": "concurrently \"bun run dev:tailwind\" \"bun --hot server.ts\"",
    "dev:tailwind": "tailwindcss -i ./styles/index.css -o ./styles/output.css --watch",
    "build:css": "tailwindcss -i ./styles/index.css -o ./styles/output.css",
    "build:app": "bun build ./index.html --outdir ./build --sourcemap",
    "build": "bun run build:css && bun run build:app",
    "format": "biome format --write . && bun run lint:fix && bun run check:fix",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write --unsafe .",
    "check": "biome check .",
    "check:fix": "biome check --write --unsafe ."
  },
  "dependencies": {
    "@git-diff-view/file": "^0.0.36",
    "@git-diff-view/react": "^0.0.36",
    "@turf/turf": "^7.2.0",
    "dexie": "^4.0.7",
    "maplibre-gl": "^4.7.1",
    "nuqs": "^2.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-map-gl": "^7.1.7",
    "zod": "^4.0.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tailwindcss/typography": "^0.5.15",
    "@types/bun": "^1.3.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  }
}
